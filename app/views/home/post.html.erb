<% title HTMLEntities.new.decode(@post.title) %>
<% content_for :head do %>
    <link rel="Start" href="/" />
    <% if @indexof < @entries.length - 1 %>
        <link rel="Prev" href="<%= @entries[@indexof + 1].link %>" />
    <% end %>
    <% if @indexof > 0 %>
        <link rel="Next" href="<%= @entries[@indexof - 1].link %>" />
    <% end %>
<% end %>
<%= render "/recentposts" %>
<div id="content">        
    <div class="posts">    
        <h1><a href="<%= @post.link %>">
            <%= raw @post.title %>
        </a></h1>
        <span class="author">by&nbsp;<%= @post.author %></span>
        <span class="pubDate">&nbsp;|&nbsp;
            <%= @post.pubdate_str %>
        </span>
        <div class="text">
            <%= raw @post.text_for_detail %>
        </div>
        <br clear="all" />
    </div>
    <% if @indexof > 0 %>
        <a href="<%= @entries[@indexof - 1].link %>" title="Next post">&lt;&lt; Next Post</a>
    <% end %>
    <% if @indexof < @entries.length - 1 %>
        <a href="<%= @entries[@indexof + 1].link %>" title="Previous post" style="float:right;">Previous Post &gt;&gt;</a>
    <% end %>
     <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
